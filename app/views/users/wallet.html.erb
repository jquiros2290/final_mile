<div class="container">
	<div class="col-md-6">
		<h3><%= @user.first_name.titleize %> <%= @user.last_name.titleize %> Wallet</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Current Balance</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><font color="green">$<%= @user.balance %></font></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-md-6">
		<h3>Make a Deposit</h3>
		<form action="/deposit" method="post">
		<input type="hidden" name="authenticity_token" method="<%= form_authenticity_token %>">
			<input type="hidden" name="_method" value="patch">
			<table>
				<tr>
				    <input type="number" min="1" name="deposit" placeholder="$ Deposit Amount" class="form-control" />
				</tr>
			</table>
			<button type="submit" name="submit" class="btn btn-success">Deposit</button>
		</form>
	</div>
</div>